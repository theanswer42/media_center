<div class="container">
  <h1><%= @tv_show.name %><%= @tv_season.name == "default" ? "" : " - #{@tv_season.name}" %></h1>
  <table class="table">
    <%= render @tv_episodes %>
  </table>

  <br />
  <% if @tv_season.name == "default" %>
    <%= link_to @tv_library.name, tv_library_path(@tv_library) %>
  <% else %>
    <%= link_to @tv_show.name, tv_show_path(@tv_show) %>
  <% end %>
</div>

