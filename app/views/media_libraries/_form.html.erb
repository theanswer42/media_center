<%= form_for @media_library do |f| %>
  <div class="form-group">
    <%= f.label :name %> :
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :path %> :
    <%= f.text_field :path, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
